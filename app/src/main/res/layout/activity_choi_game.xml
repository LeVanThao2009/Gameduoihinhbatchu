<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinh1"
    android:orientation="vertical"
    tools:context=".ChoiGameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtTienNguoiDung"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@drawable/bg_tien"
            android:gravity="center"
            android:minWidth="100dp"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="#090909"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/imgAnhCauDo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cauhoi" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:minHeight="100dp">

        <GridView
            android:id="@+id/gdvCauTraloi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"></GridView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <GridView
            android:id="@+id/gdvDapAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"></GridView>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:onClick="goiy"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@drawable/bg_tien"
                android:gravity="center"
                android:padding="10dp"
                android:text="Gợi Ý"
                android:textColor="#090909"
                android:textSize="20dp" />
            <Button
                android:onClick="doicauhoi"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@drawable/bg_tien"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đổi Câu Hỏi"
                android:textColor="#090909"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>